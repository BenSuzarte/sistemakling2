                            <label for="tecnicos">
                                <h5>Tecnicos</h5>
                            </label>
                            <select class="form-control border-dark" id="tecnicos">
                                <option></option>
                                <option>Samuel</option>
                                <option>Rafael</option>
                                <option>Ariel</option>
                                <option>Benjamin</option>
                                <option>Leo</option>
                            </select>
                        </form>
                    </div>

                    <div class="col-md-12 mt-5" style="text-align: center;">
                            <h5>Data e Hora</h5>
                            <div class="row">
                                <div class="col-md-6 offset-3">
                                    <input type="time" id="txtHora" name="hora" class="caixa-texto">
                                </div>
                            </div>
                    </div>

                </div>
            </div>
    </section>


    <footer>
        <h3>FALE CONOSCO</h3>
