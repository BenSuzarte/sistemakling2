<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>tecnico</title>
</head>

<style>
    .quit {
        color: #ff0000;
        font-size: 20px;
        margin: 5px;
        margin-left: 20px;
        font-weight: bold;
        cursor: pointer;
        border: none;
        background-color: transparent;
    }

    .navbar .container .navbar-brand {
        font-size: 33px;
        letter-spacing: 3px;
    }

    .navbar .navbar-nav .nav-link {
        color: white;
    }

    .navbar .navbar-nav .nav-link:hover {
        color: white;
    }

    .centro {
        width: 100%;
        height: 82vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .centro h5 {
        font-family: Verdana, Geneva, Tahoma, sans-serif;
    }

    textarea {
        width: 100%;
        height: 59px;
        padding: 15px;
        outline: none;
        resize: none;
        border-radius: 5px;
        border-color: black;
        margin-top: 30px;
        text-align: center;

    }

    textarea::-webkit-scrollbar {
        width: 0px;
    }

    .centro .form-group .form-control {
        text-align: center;
        font-size: 18px;
    }

    .centro .container .opcoes {
        text-align: center;
    }

    .opcoes h5 {
        font-family: Verdana, Geneva, Tahoma, sans-serif;
    }

    footer {
        position: fixed;
        bottom: 0;
        height: 5vw;
        width: 100vw;
        background-color: #4169E1;
        color: #fff;
    }

    /* Estilos para o título do rodapé */
    footer h3 {
        text-align: center;
        margin: 5.5px;
    }

    /* Estilos para a lista do rodapé */
    footer ul {
        list-style-type: none;
        display: flex;
        justify-content: space-around;
    }

    /*Extra pequeno dispositivo (telefone retrato, menor que 576px)*/
    @media (max-width: 575.98px) {

        header .navbar .container #logo {
            font-size: 25px;
        }

        header .navbar .container ul h5 {
            display: flex;
            font-size: 15px;
            padding-right: 30px;
            align-self: center;
        }

        #coluna .opcoes h5 {
            margin-top: 25px;
            margin-right: 7vh;
        }

        form section input {
            width: 80%;
            height: 80px;
            display: block;

        }
        

        form {
            margin-top: 270px;
        }


    }

    /*Pequeno dispositivo (telefone paisagem, 576px e maiores)*/
    @media (min-width: 576px) and (max-width: 767.98px) {}

    /*Médio dispositivo (tablets, 768px e maiores)*/
    @media (min-width: 768px) and (max-width: 991.98px) {}

    /*Grande dispositivo (desktops, 992px e maiores)*/
    @media (min-width: 992px) and (max-width: 1199.98px) {}

    /*Extra grande dispositivo (large desktops, 1200px  e maiores)*/
    @media (min-width: 1200px) {}
</style>


<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark" style="background-color: #4169E1;">
            <div class="container">

                <a class="navbar-brand" id="logo" href="/tecnico/chamados">KLING</a>

                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/tecnico/chamados">
                            <h5>Chamados abertos</h5>
                        </a>
                    </li>
                    <li><button class="quit">Sair</button></li>
                </ul>

            </div>
        </nav>
    </header>

    <form action="/tecnico/finalizar-chamado" method="post">
        <section class="centro">
            <div class="container">
                <div class="row">
                    <div class="col-md-5">

                        <input type="hidden" name="id" value="<%= results[0].idChamado %>">

                        <div class="form-group">
                            <label for="">
                                <h5>Professor</h5>
                            </label>
                            <input class="form-control border-dark " type="text" id="tecnico"
                                placeholder="<%= results[0].professor.toUpperCase() %>" disabled>
                        </div>

                        <div class="form-group">
                            <label for="">
                                <h5>Setor</h5>
                            </label>
                            <input class="form-control border-dark" type="text" id="tecnico"
                                placeholder="<%= results[0].setor.toUpperCase() %>" disabled>
                        </div>

                        <div class="form-group">
                            <label for="">
                                <h5>Bloco</h5>
                            </label>
                            <input class="form-control border-dark" type="text" id="tecnico"
                                placeholder="<%= results[0].bloco %>" disabled>
                        </div>

                        <div class="form-group">
                            <label for="">
                                <h5>Sala</h5>
                            </label>
                            <input class="form-control border-dark" type="text" id="tecnico"
                                placeholder="<%= results[0].sala %>" disabled>
                        </div>

                        <div class="form-group">
                            <label for="tecnico">
                                <h5>Aparelho</h5>
                            </label>
                            <input class="form-control border-dark" type="text" id="tecnico"
                                placeholder="<%= results[0].aparelho.toUpperCase() %>" disabled>
                        </div>

                        <div>
                            <textarea disabled> <%= results[0].descricao %></textarea>
                        </div>
                    </div>

                    <div class="col-md-5 offset-2" id="coluna">
                        <div class="opcoes">
                            <form class="form-group">
                                <label for="tecnicos">
                                    <h5>Técnicos</h5>
                                </label>
                                <select class="form-control border-dark" id="tecnicos">
                                    <% tecnicos.forEach(result=> { %>
                                        <option name="idTecnico" value="<%= result.idUsuario %>">
                                            <%= result.nome %>
                                        </option>
                                        <% }); %>
                                </select>
                            </form>
                        </div>

                        <div class="col-md-12 mt-5" style="text-align: center;">
                            <h5>Tempo de Conclusão</h5>
                            <div class="row ">

                                <div class="col-md-6 offset-2 form-group ">
                                    <input type="number" id="txtHora" name="horas"
                                        class="caixa-texto form-control-lg mb-2 mt-2 " placeholder="Horas">

                                    <input type="number" id="txtMinutos" name="minutos"
                                        class="caixa-texto form-control-lg " placeholder="Minutos">

                                    <label class="mt-4 offset-3" for="relatorio">
                                        <h5>Relatório</h5>
                                    </label>
                                    <!--<input class="form-control" type="text" name="relatorio" id="relatorio"> -->
                                    <textarea class="form-group offset-2"></textarea>
                                    <button class="btn btn-outline-success mt-4 offset-3" type="submit">Concluir
                                        chamado</button>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
        </section>
    </form>

    <footer>
        <h3>FALE CONOSCO</h3>
        <ul>
            <li>
                Email coorporativo
            </li>
            <li>
                Numero
            </li>
        </ul>
    </footer>



    <script>
        // -------------- MODAL USER INFO --------------
        // Obter elementos DOM
        const infoModal = document.getElementById('user-modal')
        const btnInfoModal = document.getElementById('btn-info-modal')
        const closeInfoModalBtn = document.getElementsByClassName('close-info')[0]

        // Abrir o modal quando o botão for clicado
        btnInfoModal.addEventListener('click', function () {
            infoModal.style.display = 'block'
        })

        // Fechar o modal quando o botão de fechar for clicado
        closeInfoModalBtn.addEventListener('click', function () {
            infoModal.style.display = 'none'
        })

        // Fechar o modal quando o usuário clicar fora da área do modal
        window.addEventListener('click', function (event) {
            if (event.target === infoModal) {
                infoModal.style.display = 'none'
            }
        })
    </script>

</body>

</html>