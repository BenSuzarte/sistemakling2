<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="tela-tecnico.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <script src="https://kit.fontawesome.com/108281d3fc.js" crossorigin="anonymous"></script>
  <title>Gerenciar</title>
</head>
<body>

<header>
  <nav>
    <a class="logo" href="/index-tecnico">KLING</a>
    <ul class="nav-list">
      <li><a href="/index-tecnico">Chamados abertos</a></li>
      <li><button class="material-symbols-outlined" id="btnModal">account_circle</button></li>
    </ul>
  </nav>
</header>

<!-- Modal-->
<div id="myModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <i class="fa-regular fa-circle-user fa-5x"></i>
    <h2>Informações do Usuário</h2>
    <p>Nome: Rafael Abreu</p>
    <p>Email: kling@example.com</p>
    <p>Telefone: 71</p>
  </div>
</div>

<main>
  <h1>Bem vindo, técnico!</h1>
  <h2>Lista de chamados aguardando atendimento:</h2>

  <section class="screen-chamados">
    <!-- Aqui será apresentado todos os chamados abertos -->
    <h2>Chamados Abertos</h2>
      <div class="chamado">
        <div class="info-chamado">
          <span class="titulo">COMPUTADOR: CHAMADA NO BLOCO A, SALA 03</span>
          <a class="finalizar-chamado" href="/finalizar-chamado">Finalizar Chamado</a>
        </div>
        <span class="detalhes">
          <p>detalhamento: detalhes...</p>
        </span>
      </div>

      
  </section>
</main>

<!-- Rodapé -->
<footer>
  <h3>FALE CONOSCO</h3>
  <ul>
    <li>
      Email coorporativo
    </li>
    <li>
      Numero
    </li>
  </ul>
</footer>

<script>
  // Obter elementos DOM
  const modal = document.getElementById('myModal')
  const btnModal = document.getElementById('btnModal')
  const closeModalBtn = document.getElementsByClassName('close')[0]
  
  // Abrir o modal quando o botão for clicado
  btnModal.addEventListener('click', function() {
    modal.style.display = 'block'
  })
  
  // Fechar o modal quando o botão de fechar for clicado
  closeModalBtn.addEventListener('click', function() {
    modal.style.display = 'none'
  })
  
  // Fechar o modal quando o usuário clicar fora da área do modal
  window.addEventListener('click', function(event) {
    if (event.target === modal) {
      modal.style.display = 'none'
    }
  })
</script>
</body>
</html>