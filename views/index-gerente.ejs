          </div>

        </div>
      </div>

    </div>

  </section>  
    <!--<button href="/" class='relatorio'>Relatórios</button> -->
</main>

<!-- Rodapé -->
<footer>
  <h3>FALE CONOSCO</h3>
  <ul>
    <li>
      Email coorporativo
    </li>
    <li>
      Numero
    </li>
  </ul>
</footer>

<!-- Modal-->
<div id="myModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <i class="fa-regular fa-circle-user fa-5x"></i>
    <h2>Informações do Usuário</h2>
    <p>Nome: Rafael Abreu</p>
    <p>Email: kling@example.com</p>
    <p>Telefone: 71</p>
    <button class="quit">Sair</button>
  </div>
</div>

<script>
  //        Modal
  // Obter elementos do DOM
  const modal = document.getElementById('myModal')
  const btnModal = document.getElementById('btnModal')
  const closeModalBtn = document.getElementsByClassName('close')[0]
  
  // Abrir o modal quando o botão for clicado
  btnModal.addEventListener('click', function() {
    modal.style.display = 'block'
  })
  
  // Fechar o modal quando o botão de fechar for clicado
  closeModalBtn.addEventListener('click', function() {
    modal.style.display = 'none'
  })
  
  // Fechar o modal quando o usuário clicar fora da área do modal
  window.addEventListener('click', function(event) {
    if (event.target === modal) {
      modal.style.display = 'none'
    }
  })

///////////////////////////////////////////////////////////////////////

//       Detalhar
// Obter elementos DOM
const chamadoPendente = document.getElementsByClassName('detalhar-pendente')
const detalhamentoPendente = document.getElementsByClassName('detalhamento-pendente')

const chamadoConcluido = document.getElementsByClassName('detalhar-concluido')
const detalhamentoConcluido = document.getElementsByClassName('detalhamento-concluido')

for (let i = 0; i < chamadoPendente.length; i++) {
  chamadoPendente[i].addEventListener('click', function(event) {
    event.preventDefault()

    const text = this.innerHTML

    if (text === 'Leia mais...') {
      this.innerHTML = 'Leia menos...'
      this.parentNode.style.height = '120px'
      detalhamentoPendente[i].style.display = 'inherit'
      detalhamentoPendente[i].style.flexDirection = 'column'
      detalhamentoPendente[i].style.position = 'absolute'
      detalhamentoPendente[i].style.left = '11.5%'
      detalhamentoPendente[i].style.bottom = '20%'
      
    } else {
      this.innerHTML = 'Leia mais...'
      this.parentNode.style.height = '35px'
      detalhamentoPendente[i].style.display = 'none'
    }
  })
}

for (let i = 0; i < chamadoConcluido.length; i++) {
    chamadoConcluido[i].addEventListener('click', function(event) {
      event.preventDefault()

      const text = this.innerHTML

      if (text === 'Leia mais...') {
        this.innerHTML = 'Leia menos...'
        this.parentNode.style.height = '250px'
        detalhamentoConcluido[i].style.display = 'inherit'
        detalhamentoConcluido[i].style.flexDirection = 'column'
        detalhamentoConcluido[i].style.position = 'absolute'
        detalhamentoConcluido[i].style.left = '11.5%'
        detalhamentoConcluido[i].style.bottom = '20%'

      } else {
        this.innerHTML = 'Leia mais...'
        this.parentNode.style.height = '35px'
        detalhamentoConcluido[i].style.display = 'none'
      }
    })
  }
  </script>
</body>
</html>