      <h2>Chamados Abertos</h2>
      <div class="chamado">
        <div class="text-chamado">
          <span class="titulo">COMPUTADOR: CHAMADA NO BLOCO A, SALA 03</span>
        </div>
        <a class="detalhar-pendente" href="#">Leia mais...</a>
        <span class="detalhamento-pendente">
          <p>detalhamento: detalhes...</p>
        </span>
      </div>
    </div>
    
    <div class="screen-chamados">
      <!-- Aqui será apresentado todos os chamados concluidos -->
      <h2>Chamados Concluidos</h2>

      <div class="chamado">
        <div class="text-chamado">
          <span class="titulo">COMPUTADOR: CHAMADA NO BLOCO A, SALA 03</span>
        </div>
        <a class="detalhar-concluido" href="#">Leia mais...</a>

        <div class="detalhamento-concluido">
          <div>
