<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="/crud.css">
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  <script src="https://kit.fontawesome.com/108281d3fc.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

  <title>Relação de Usuários</title>
</head>

<body>

  <!-- Cabeçalho -->
  <header>
    <nav>
      <a class="logo" href="/index-gerente">KLING</a>
      <ul class="nav-list">
        <li><a href="/index-gerente">Chamados</a></li>
        <li><a href="/user-crud">Cadastros</a></li>
        <li><a href="/salas-crud">Salas</a></li>
        <li><button class="material-symbols-outlined" id="btn-info-modal">account_circle</button></li>
      </ul>
    </nav>
  </header>

  <section>
  <h1>Usuários</h1>
  <!-- CRUD -->

  <form action="/gerente/usuarios-cadastrar" method="post" class="CRUD">
    <div class="div-form" style="background-color: #f2f2f2;">
      <label for="m-funcao">Função</label>
      <select name="funcao" id="">
        <option value="PROFESSOR">PROFESSOR</option>
        <option value="TECNICO">TÉCNICO</option>
        <option value="GERENTE">GERENTE</option>
      </select>

      <label for="m-nome">Nome</label>
      <input name="nome" type="text" required />

      <label for="m-email">Email</label>
      <input name="email" type="text" required pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" placeholder='kling@exemplo.com'>

      <label for="m-salario">Telefone</label>
      <input name="telefone" type="tel" required placeholder="(xx) xxxxx-xxxx">
      <button type="submit" id="btnSalvar" class="addCRUD">Cadastrar novo usuário</button>
    </div>
  </form>

  <div class="CRUD">
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Função</th>
          <th>Nome</th>
          <th>Email</th>
          <th>Telefone</th>
          <th>Editar</th>
          <th>Excluir</th>
        </tr>
      </thead>
      <tbody>
        <% usuarios.forEach(function(usuario) { %>
        <tr>
          <td><%= usuario.idUsuario %></td>
          <td><%= usuario.funcao %></td>
          <td><%= usuario.nome %></td>
          <td><%= usuario.email %></td>
          <td><%= usuario.telefone %></td>
          <td>
            <button type="button" class="editCRUD" id="btn-edit-modal"
            data-id="<%= usuario.idUsuario %>"
            data-nome="<%= usuario.nome %>">Editar</button>
          </td>
          <td>
            <button type="button" class="deleteCRUD" id="btn-delete-modal"
                data-id="<%= usuario.idUsuario %>"
                data-nome="<%= usuario.nome %>">
              Deletar
            </button>

          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</section>

<!-- Modal Info -->
<div id="user-modal" class="info-modal">
  <div class="info-modal-content">
    <span class="close-info">&times;</span>
    <i class="fa-regular fa-circle-user fa-5x"></i>
    <h2>Informações do Usuário</h2>
    <p>Nome: Rafael Abreu</p>
    <p>Email: kling@example.com</p>
    <p>Telefone: 71</p>
    <button class="quit">Sair</button>
  </div>
</div>

<!-- Modal Delete -->
<div id="delete-user-modal" class="delete-modal">
  <div class="delete-modal-content">
    <header>
      <h2>Excluir usuário</h2>
      <span class="close-delete">&times;</span>
    </header>
    <form>
      <input type="text" name="delete-name" id="delete-name" disabled>
      <button type="button" class="deleteCRUD">Deletar</button>
    </form>
  </div>
</div>

  <!-- Modal Edit -->
  <div id="edit-user-modal" class="edit-modal">
    <div class="edit-modal-content">
      <header>
        <h2>Editar usuário</h2>
        <span class="close-edit">&times;</span>
      </header>
      <form>
        <div>
          <label for="funcao">Função</label>
          <select name="funcao" id="funcao" required>
            <option value="PROFESSOR">Professor</option>
            <option value="TECNICO">Técnico</option>
            <option value="GERENTE">Gerente</option>
          </select>
        </div>
        <div>
          <label for="name">Nome</label>
          <input type="text" name="nome" id="nome" required>
        </div>
        <div>
          <label for="email">Email</label>
          <input type="text" name="" id="" required pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$">
        </div>
        <div>
          <label for="tel">Telefone</label>
          <input type="tel" name="tel" id="tel">
        </div>
        <button type="button" class="editCRUD">Confirmar</button>
      </form>
    </div>
  </div>

</body>
<script>
// -------------- MODAL USER INFO --------------
// Obter elementos DOM
const infoModal = document.getElementById('user-modal')
const btnInfoModal = document.getElementById('btn-info-modal')
const closeInfoModalBtn = document.getElementsByClassName('close-info')[0]
const mySection = document.getElementsByTagName('section')[0]
      
// Abrir o modal quando o botão for clicado
btnInfoModal.addEventListener('click', function() {
  infoModal.style.display = 'block'
})
      
// Fechar o modal quando o botão de fechar for clicado
closeInfoModalBtn.addEventListener('click', function() {
  infoModal.style.display = 'none'
})
      
// Fechar o modal quando o usuário clicar fora da área do modal
window.addEventListener('click', function(event) {
  if (event.target === infoModal) {
    infoModal.style.display = 'none'
  }
})
// CRUD MODALS
var deleteOpen = false
var editOpen = false

// -------------- MODAL DELETE USER --------------
// Obter elementos DOM
const deleteModal = document.getElementById('delete-user-modal');
const btnDeleteModal = document.getElementsByClassName('deleteCRUD');
const closeDeleteModalBtn = document.getElementsByClassName('close-delete')[0];

// Percorrer todos os botões de deletar
Array.from(btnDeleteModal).forEach(function (button) {
  // Adicionar evento de clique a cada botão
  button.addEventListener('click', function () {
    deleteModal.style.display = 'block'; // Abrir o modal
    deleteOpen = true
    mySection.classList.add('efeito-blur')

    if (editOpen){
      editOpen = false
      editModal.style.display = 'none'
    }
  });
});

// Fechar o modal quando o botão de fechar for clicado
closeDeleteModalBtn.addEventListener('click', function () {
  mySection.classList.remove('efeito-blur')
  deleteModal.style.display = 'none'
  deleteOpen = false
});

// -------------- MODAL EDIT USER --------------
// Obter elementos DOM
const editModal = document.getElementById('edit-user-modal');
const btnEditModal = document.getElementsByClassName('editCRUD');
const closeEditModalBtn = document.getElementsByClassName('close-edit')[0];

// Percorrer todos os botões de editar
Array.from(btnEditModal).forEach(function (button) {
  // Adicionar evento de clique a cada botão
  button.addEventListener('click', function () {
    editModal.style.display = 'block'; // Abrir o modal
    editOpen = true
    mySection.classList.add('efeito-blur')

    if (deleteOpen){
    deleteOpen = false
    deleteModal.style.display = 'none'
    }
  });
});

// Fechar o modal quando o botão de fechar for clicado
closeEditModalBtn.addEventListener('click', function () {
  editModal.style.display = 'none';
  mySection.classList.remove('efeito-blur')
  editOpen = false
});

</script>

</html>