<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="/crud.css">
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  <script src="https://kit.fontawesome.com/108281d3fc.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

  <title>Relação de Usuários</title>
</head>

<body>

  <!-- Cabeçalho -->
  <header>
    <nav>
      <a class="logo" href="/index-gerente">KLING</a>
      <ul class="nav-list">
        <li><a href="/index-gerente">Chamados</a></li>
        <li><a href="/user-crud">Cadastros</a></li>
        <li><a href="/salas-crud">Salas</a></li>
        <li><button class="material-symbols-outlined" id="btnInfoModal">account_circle</button></li>
      </ul>
    </nav>
  </header>

  <h1>Usuários</h1>
  <!-- CRUD -->

  <form action="/gerente/usuarios-cadastrar" method="post" class="CRUD">
    <div class="div-form">
      <label for="m-funcao">Função</label>
      <select name="funcao" id="">
        <option value="PROFESSOR">PROFESSOR</option>
        <option value="TECNICO">TÉCNICO</option>
        <option value="GERENTE">GERENTE</option>
      </select>

      <label for="m-nome">Nome</label>
      <input name="nome" type="text" required />

      <label for="m-email">Email</label>
      <input name="email" type="text" required pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" placeholder='kling@exemplo.com'>

      <label for="m-salario">Telefone</label>
      <input name="telefone" type="tel" required placeholder="(xx) xxxxx-xxxx">
      <button type="submit" id="btnSalvar" class="addCRUD">Cadastrar novo usuário</button>
    </div>
  </form>

  <div class="CRUD">
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Função</th>
          <th>Nome</th>
          <th>Email</th>
          <th>Telefone</th>
          <th class="acao">Editar</th>
          <th class="acao">Excluir</th>
        </tr>
      </thead>
      <tbody>
        <% usuarios.forEach(function(usuario) { %>
        <tr>
          <td><%= usuario.idUsuario %></td>
          <td><%= usuario.funcao %></td>
          <td><%= usuario.nome %></td>
          <td><%= usuario.email %></td>
          <td><%= usuario.telefone %></td>
          <td>
            <button type="button" class="editCRUD">Editar</button>
          </td>
          <td>
            <button type="button" class="deleteCRUD" id="btnDeleteModal"
                data-id="<%= usuario.idUsuario %>"
                data-nome="<%= usuario.nome %>">
              Deletar
            </button>

          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <!-- Modal Info -->
  <div id="userModal" class="info-modal">
    <div class="info-modal-content">
      <span class="close-info">&times;</span>
      <i class="fa-regular fa-circle-user fa-5x"></i>
      <h2>Informações do Usuário</h2>
      <p>Nome: Rafael Abreu</p>
      <p>Email: kling@example.com</p>
      <p>Telefone: 71</p>
    </div>
  </div>

  <!-- Modal Delete -->
  <div id="deleteUserModal" class="delete-modal">
    <div class="delete-modal-content">
      <header>
        <h2>Excluir usuário</h2>
        <span class="close-delete">&times;</span>
      </header>
      <form>
        <input type="text" name="name" id="name" disabled>
        <button type="button" class="deleteCRUD">Deletar</button>
      </form>
    </div>
  </div>

</body>
<script>
// -------------- MODAL USER INFO --------------
// Obter elementos DOM
const infoModal = document.getElementById('userModal')
const btnInfoModal = document.getElementById('btnInfoModal')
const closeInfoModalBtn = document.getElementsByClassName('close-info')[0]
      
// Abrir o modal quando o botão for clicado
btnInfoModal.addEventListener('click', function() {
  infoModal.style.display = 'block'
})
      
// Fechar o modal quando o botão de fechar for clicado
closeInfoModalBtn.addEventListener('click', function() {
  infoModal.style.display = 'none'
})
      
// Fechar o modal quando o usuário clicar fora da área do modal
window.addEventListener('click', function(event) {
  if (event.target === infoModal) {
    infoModal.style.display = 'none'
  }
})
// -------------- MODAL DELETE USER --------------
// Obter elementos DOM
const deleteModal = document.getElementById('deleteUserModal')
const btnDeleteModal = document.getElementById('btnDeleteModal')
const closeDeleteModalBtn = document.getElementsByClassName('close-delete')[0]

// Abrir o modal quando o botão for clicado
btnDeleteModal.addEventListener('click', function() {
  deleteModal.style.display = 'block'
});

// Fechar o modal quando o botão de fechar for clicado
closeDeleteModalBtn.addEventListener('click', function() {
  deleteModal.style.display = 'none'
});

// Fechar o modal quando o usuário clicar fora da área do modal
window.addEventListener('click', function(event) {
  if (event.target === deleteModal) {
    deleteModal.style.display = 'none'
  }
})


</script>

</html>
